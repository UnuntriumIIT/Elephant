@{
    ViewData["Title"] = "Registration page";
}

<div class="text-center">
    <h1>
        Регистрация
    </h1>
</div>

<form method="post" action="http://localhost:5003/auth/register">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" class="form-control" id="login" name="login" placeholder="Enter login">
    </div>
    <div class="form-group">
        <label for="password1">Password</label>
        <input type="password" class="form-control" id="password1" name="password1" placeholder="Password">
    </div>
    <div class="form-group">
        <button onclick="mySubmit(this)" type="submit" class="btn btn-info">Зарегистрироваться</button>
    </div>
</form>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jsSHA/3.2.0/sha.js"></script>
<script>
    function mySubmit(obj) {
        var pwdObj = document.getElementById('password1');
        var hashObj = new jsSHA("SHA-512", "TEXT", { numRounds: 1 });
        hashObj.update(pwdObj.value);
        var hash = hashObj.getHash("HEX");
        pwdObj.value = hash;
    }
</script>