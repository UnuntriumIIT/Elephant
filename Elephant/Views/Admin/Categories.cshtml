@{
    ViewData["Title"] = "Categories - Admin page";
}
<div class="text-center">
    <h1>Категории</h1>
</div>
<div class="d-flex justify-content-end">
    <div>
        <a href="/admin/addcategory" class="btn btn-info d-inline-flex m-2" role="button">Добавить категорию</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Название</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["categories"] as IEnumerable<Elephant.Models.Category>)
            {
        <tr>
            <td>@Html.DisplayFor(a => item.Id)</td>
            <td>@Html.DisplayFor(a => item.Name)</td>
            <td>
                <a href="/admin/editcategory/@item.Id" 
                   class="btn btn-light d-inline-flex m-2" 
                   role="button">
                    <img width="25" 
                         height="25" 
                         src="https://www.pngrepo.com/png/80406/512/pencil.png">
                </a>
                <a href="/admin/deletecategory/@item.Id" 
                   class="btn btn-light d-inline-flex m-2" 
                   role="button">
                    <img width="25" 
                         height="25" 
                         src="https://www.iconpacks.net/icons/1/free-trash-icon-347-thumb.png">
                </a>
            </td>
        </tr>
            }
    </tbody>
</table>